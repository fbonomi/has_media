<%- klass    = object.class.to_s.underscore %>
<%- multiple = object.send(context).is_a?(Array) %>

<p>
  <%= label_tag "#{klass}[#{context}]#{'[]' if multiple}", 
    t(context, :scope => [:activerecord, :attributes, klass]) %>
  <%= file_field_tag "#{klass}[#{context}]#{'[]' if multiple}" %>
</p>
